Q79: Perform diagonal traversal of a matrix.

/*
Sample Test Cases:
Input 1:
3 3
1 2 3
4 5 6
7 8 9
Output 1:
1 2 4 7 5 3 6 8 9

*/

#include <stdio.h>

void diagonal_traversal(int R, int C, int matrix[R][C]) {
    int i, j;
    int k;
    int num_diagonals = R + C - 1;

    for (k = 0; k < num_diagonals; k++) {
        
        if (k % 2 == 0) {
            
            int r_start = (k < R) ? k : R - 1;
            int c_start = (k < R) ? 0 : k - (R - 1);
            
            for (i = r_start, j = c_start; i >= 0 && j < C; i--, j++) {
                if (i + j == k) {
                    printf("%d ", matrix[i][j]);
                }
            }
        } else {
            
            int r_start = (k < C) ? 0 : k - (C - 1);
            int c_start = (k < C) ? k : C - 1;
            
            for (i = r_start, j = c_start; i < R && j >= 0; i++, j--) {
                if (i + j == k) {
                    printf("%d ", matrix[i][j]);
                }
            }
        }
    }
    printf("\n");
}

int main()
{
    int R, C;
    int i, j;

    scanf("%d %d", &R, &C);

    int matrix[R][C];

    for (i = 0; i < R; i++)
    {
        for (j = 0; j < C; j++)
        {
            scanf("%d", &matrix[i][j]);
        }
    }

    diagonal_traversal(R, C, matrix);

    return 0;
}
