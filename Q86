Q86: Check if a string is a palindrome.

/*
Sample Test Cases:
Input 1:
madam
Output 1:
Palindrome

Input 2:
hello
Output 2:
Not palindrome

*/

#include <stdio.h>
#include <string.h>

int main()
{
    char str[100];
    int len, is_palindrome = 1;
    int i, j;

    if (fgets(str, sizeof(str), stdin) == NULL)
    {
        return 1;
    }

    len = 0;
    while (str[len] != '\0')
    {
        len++;
    }

    if (len > 0 && str[len - 1] == '\n')
    {
        str[len - 1] = '\0';
        len--;
    }

    i = 0;
    j = len - 1;

    while (i < j)
    {
        if (str[i] != str[j])
        {
            is_palindrome = 0;
            break;
        }
        i++;
        j--;
    }

    if (is_palindrome)
    {
        printf("Palindrome\n");
    }
    else
    {
        printf("Not palindrome\n");
    }

    return 0;
}
