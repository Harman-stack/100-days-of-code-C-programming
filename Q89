Q89: Count frequency of a given character in a string.

/*
Sample Test Cases:
Input 1:
programming
g
Output 1:
2

*/

#include <stdio.h>

int main()
{
    char str[100];
    char target;
    int count = 0;
    int i = 0;
    char newline_check;

    if (fgets(str, sizeof(str), stdin) == NULL)
    {
        return 1;
    }

    if (scanf("%c", &target) != 1)
    {
        return 1;
    }

    while (str[i] != '\0')
    {
        if (str[i] == target)
        {
            count++;
        }
        i++;
    }

    printf("%d\n", count);

    return 0;
}