Q85: Reverse a string.

/*
Sample Test Cases:
Input 1:
abcd
Output 1:
dcba

*/

#include <stdio.h>
#include <string.h>

int main()
{
    char str[100];
    int len;
    int i, j;
    char temp;

    if (fgets(str, sizeof(str), stdin) == NULL)
    {
        return 1;
    }

    len = 0;
    while (str[len] != '\0')
    {
        len++;
    }

    if (len > 0 && str[len - 1] == '\n')
    {
        str[len - 1] = '\0';
        len--;
    }

    i = 0;
    j = len - 1;

    while (i < j)
    {
        temp = str[i];
        str[i] = str[j];
        str[j] = temp;
        i++;
        j--;
    }

    printf("%s\n", str);

    return 0;
}
